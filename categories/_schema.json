{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/category.schema.json",
  "title": "Category",
  "description": "Defines an entity type in the Labki ontology",
  "type": "object",
  "required": ["id", "label", "description"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the filename (without .json)",
      "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Category represents",
      "minLength": 1
    },
    "parents": {
      "type": "array",
      "description": "Array of parent Category IDs to inherit from",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "required_properties": {
      "type": "array",
      "description": "Property IDs that must be provided for instances of this Category",
      "items": {
        "type": "string",
        "pattern": "^(Has|Is)_[a-z]+(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "optional_properties": {
      "type": "array",
      "description": "Property IDs that may optionally be provided",
      "items": {
        "type": "string",
        "pattern": "^(Has|Is)_[a-z]+(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "required_subobjects": {
      "type": "array",
      "description": "Subobject IDs that must be provided for instances of this Category",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "optional_subobjects": {
      "type": "array",
      "description": "Subobject IDs that may optionally be provided",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    }
  }
}
