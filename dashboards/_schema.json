{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/dashboard.schema.json",
  "title": "Dashboard",
  "description": "Documentation pages with SMW queries for modules/bundles",
  "type": "object",
  "required": ["id", "label", "description", "pages"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the filename (without .json)",
      "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Dashboard provides",
      "minLength": 1
    },
    "pages": {
      "type": "array",
      "description": "Dashboard pages. The root page has name '' (empty string).",
      "items": {
        "type": "object",
        "required": ["name", "wikitext"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Page name. Empty string for root page, otherwise follows pattern: Capital_word format.",
            "pattern": "^$|^[A-Z][a-z]*(_[a-z]+)*$"
          },
          "wikitext": {
            "type": "string",
            "description": "MediaWiki wikitext content including SMW queries",
            "minLength": 1
          }
        }
      },
      "minItems": 1,
      "contains": {
        "type": "object",
        "properties": {
          "name": { "const": "" }
        },
        "required": ["name"]
      }
    }
  }
}
