{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/bundle.schema.json",
  "title": "Bundle",
  "description": "A curated collection of Modules designed for a specific use case or deployment scenario",
  "type": "object",
  "required": ["id", "version", "label", "description", "modules"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the filename (without .json)",
      "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of this bundle (MAJOR.MINOR.PATCH)",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Bundle is designed for",
      "minLength": 1
    },
    "modules": {
      "type": "array",
      "description": "List of Module IDs to include",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "dashboards": {
      "type": "array",
      "description": "List of Dashboard IDs included in this Bundle",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    }
  }
}
