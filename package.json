{
  "name": "labki-schemas",
  "version": "1.0.0",
  "description": "Labki ontology schema definitions with CI validation",
  "type": "module",
  "private": true,
  "scripts": {
    "validate": "node scripts/validate.js",
    "generate-artifacts": "node scripts/generate-artifacts.js",
    "test": "node --test scripts/lib/*.test.js",
    "test:integration": "node --test scripts/__integration__/*.test.js",
    "test:all": "node --test scripts/lib/*.test.js scripts/__integration__/*.test.js",
    "test:watch": "node --test --watch scripts/lib/*.test.js scripts/__integration__/*.test.js"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "better-ajv-errors": "^1.2.0",
    "deep-object-diff": "^1.1.9",
    "dependency-graph": "^1.0.0",
    "fast-glob": "^3.3.3",
    "json-parse-even-better-errors": "^4.0.0",
    "semver": "^7.7.3"
  }
}
