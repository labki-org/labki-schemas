{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/subobject.schema.json",
  "title": "Subobject",
  "description": "Defines a reusable nested structure that can be embedded within Categories",
  "type": "object",
  "required": ["id", "label", "description"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the filename (without .json)",
      "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Subobject represents",
      "minLength": 1
    },
    "required_properties": {
      "type": "array",
      "description": "Property IDs that must be provided when using this Subobject",
      "items": {
        "type": "string",
        "pattern": "^(Has|Is)_[a-z]+(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "optional_properties": {
      "type": "array",
      "description": "Property IDs that may optionally be provided",
      "items": {
        "type": "string",
        "pattern": "^(Has|Is)_[a-z]+(_[a-z]+)*$"
      },
      "uniqueItems": true
    }
  }
}
