{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/template.schema.json",
  "title": "Template",
  "description": "Defines how Property values are rendered in the wiki",
  "type": "object",
  "required": ["id", "label", "description", "wikitext"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the file path (without .json). Use / for subpages.",
      "minLength": 1
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Template does",
      "minLength": 1
    },
    "wikitext": {
      "type": "string",
      "description": "The MediaWiki wikitext template content",
      "minLength": 1
    }
  }
}
