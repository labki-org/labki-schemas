{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labki.org/schemas/module.schema.json",
  "title": "Module",
  "description": "A logical grouping of related schema entities",
  "type": "object",
  "required": ["id", "version", "label", "description"],
  "anyOf": [
    { "required": ["categories"] },
    { "required": ["properties"] },
    { "required": ["subobjects"] },
    { "required": ["templates"] },
    { "required": ["dashboards"] },
    { "required": ["resources"] }
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier matching the filename (without .json)",
      "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of this module (MAJOR.MINOR.PATCH)",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "label": {
      "type": "string",
      "description": "Human-readable display name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Explanation of what this Module provides",
      "minLength": 1
    },
    "categories": {
      "type": "array",
      "description": "List of Category IDs included in this Module",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "properties": {
      "type": "array",
      "description": "List of Property IDs included in this Module",
      "items": {
        "type": "string",
        "pattern": "^(Has|Is)_[a-z]+(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "subobjects": {
      "type": "array",
      "description": "List of Subobject IDs included in this Module",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "templates": {
      "type": "array",
      "description": "List of Template IDs included in this Module",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "dependencies": {
      "type": "array",
      "description": "List of Module IDs that must be installed first",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "dashboards": {
      "type": "array",
      "description": "List of Dashboard IDs included in this Module",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-z]*(_[a-z]+)*$"
      },
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "description": "List of Resource IDs included in this Module (often auto-derived from categories)",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  }
}
